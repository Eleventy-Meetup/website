---
layout: layouts/base.njk
---
<header>
  {% include 'nav.njk' %}

  <section class="dark-bg">
    <div class="container">
      <h1>{{title}}</h1>
      {% if headingText %}
        <div class="lead">{{headingText | safe}}</div>
      {% else %}
        <div class="lead">{{description | safe}}</div>
      {% endif %}
      {% set upcomingEvent = collections.eventPages | nextEvent %}
      {% if upcomingEvent == event %}
        {% include "add-to-calendar.njk" %}
      {% endif %}
    </div>
  </section>
</header>

<main>
  {{ content | safe }}
</main>
